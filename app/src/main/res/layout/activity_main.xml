<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorOnSurfaceInverse"
    android:screenOrientation="portrait"
    tools:context=".main.MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbarlayout"
            layout="@layout/toolbar" />

        <LinearLayout
            android:id="@+id/app"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/md_theme_background"
            android:foregroundGravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/_8sdp">

            <LinearLayout
                android:id="@+id/up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/top"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/NabuImage"
                        android:layout_width="@dimen/_115sdp"
                        android:layout_height="@dimen/_138sdp"
                        android:layout_gravity="center"
                        android:contentDescription="TODO"
                        android:paddingBottom="@dimen/_4sdp"
                        android:scaleType="fitXY"
                        android:src="@drawable/nabu"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/DeviceImage"
                        android:layout_width="@dimen/_115sdp"
                        android:layout_height="@dimen/_138sdp"
                        android:src="@drawable/unknown"
                        android:contentDescription="TODO"
                        android:scaleType="fitXY" />

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cv_info"
                        style="@style/Widget.Material3.CardView.Filled"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:adjustViewBounds="true"
                        android:animateLayoutChanges="true"
                        android:clickable="true"
                        android:elevation="@dimen/cardElevation"
                        android:focusable="true"
                        android:foreground="@drawable/vayu"
                        android:gravity="left"
                        android:padding="@dimen/parentMargin"
                        android:stateListAnimator="@animator/state_list_anim"
                        app:cardBackgroundColor="?attr/colorOnSurfaceInverse"
                        app:cardCornerRadius="@dimen/cardCornerRadius"
                        app:cardMaxElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="14dp"
                            android:gravity="left|center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="4dp"
                                android:gravity="center"
                                android:text="WINDOWS ON ARM"
                                android:textSize="@dimen/_12sdp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/deviceName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:textSize="@dimen/_11sdp" />

                            <TextView
                                android:id="@+id/tv_ramvalue"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:textSize="@dimen/_11sdp" />

                            <TextView
                                android:id="@+id/tv_panel"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:textSize="@dimen/_11sdp"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/tv_date"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:textSize="@dimen/_11sdp" />

                            <TextView
                                android:id="@+id/tv_slot"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:textSize="@dimen/_11sdp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="bottom"
                                android:orientation="horizontal">

                                <com.google.android.material.card.MaterialCardView
                                    android:id="@+id/guide"
                                    style="@style/Widget.Material3.CardView.Filled"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:layout_weight="1"
                                    android:adjustViewBounds="true"
                                    android:animateLayoutChanges="true"
                                    android:clickable="true"
                                    android:elevation="@dimen/cardElevation"
                                    android:focusable="true"
                                    android:gravity="center"
                                    android:padding="@dimen/parentMargin"
                                    android:stateListAnimator="@animator/state_list_anim"
                                    app:cardBackgroundColor="@color/md_theme_onPrimary"
                                    app:cardCornerRadius="@dimen/cardCornerRadius"
                                    app:cardMaxElevation="0dp">

                                    <android.widget.TextView
                                        android:id="@+id/guide_text"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:paddingVertical="4dp"
                                        android:text="@string/guide"
                                        android:textSize="@dimen/_12sdp"
                                        android:textStyle="bold" />
                                </com.google.android.material.card.MaterialCardView>

                                <com.google.android.material.card.MaterialCardView
                                    android:id="@+id/group"
                                    style="@style/Widget.Material3.CardView.Filled"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:layout_weight="1"
                                    android:adjustViewBounds="true"
                                    android:animateLayoutChanges="true"
                                    android:clickable="true"
                                    android:elevation="@dimen/cardElevation"
                                    android:focusable="true"
                                    android:gravity="center"
                                    android:padding="@dimen/parentMargin"
                                    android:stateListAnimator="@animator/state_list_anim"
                                    app:cardBackgroundColor="@color/md_theme_onPrimary"
                                    app:cardCornerRadius="@dimen/cardCornerRadius"
                                    app:cardMaxElevation="0dp">

                                    <android.widget.TextView
                                        android:id="@+id/group_text"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:paddingVertical="4dp"
                                        android:text="@string/group"
                                        android:textSize="@dimen/_12sdp"
                                        android:textStyle="bold" />

                                </com.google.android.material.card.MaterialCardView>

                            </LinearLayout>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/appRight"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="25dp">

                <com.woa.helper.main.Button
                    style="@style/button"
                    android:id="@+id/backup"
                    android:layout_weight="1"
                    app:title="@string/backup_boot_title"
                    app:subtitle="@string/backup_boot_subtitle"
                    app:image="@drawable/ic_disk"
                    android:layout_margin="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <com.woa.helper.main.Button
                    style="@style/button"
                    android:id="@+id/mnt"
                    android:layout_weight="1"
                    app:title="@string/mnt_title"
                    app:subtitle="@string/mnt_subtitle"
                    app:image="@drawable/mnt"
                    android:layout_margin="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <com.woa.helper.main.Button
                    style="@style/button"
                    android:id="@+id/toolbox"
                    android:layout_weight="1"
                    app:title="@string/toolbox_title"
                    app:subtitle="@string/toolbox_subtitle"
                    app:image="@drawable/toolbox"
                    android:layout_margin="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <com.woa.helper.main.Button
                    style="@style/button"
                    android:id="@+id/quick_boot"
                    android:layout_weight="1"
                    app:title="@string/quickboot_title"
                    app:subtitle="@string/quickboot_subtitle"
                    app:image="@drawable/ic_launcher_foreground"
                    android:layout_margin="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/tvAppCreator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:gravity="end"
        android:maxLines="1"
        android:textSize="@dimen/_9sdp"
        android:layout_margin="4dp"
        android:text="@string/creator" />

    <com.github.mmin18.widget.RealtimeBlurView
        android:id="@+id/blur"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:realtimeBlurRadius="10dp"
        android:visibility="gone"
        app:realtimeOverlayColor="#80000000" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
