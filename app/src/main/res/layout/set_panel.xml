<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/settingsPanel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorOnSurfaceInverse"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbarlayout"
            layout="@layout/toolbar" />

        <ScrollView
            android:id="@+id/app"
            android:background="@color/md_theme_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.woa.helper.main.SettingsButton
                    style="@style/settingsButton"
                    android:id="@+id/modemdump"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:visibility="gone"
                    app:text="Disable modem dump option" />

                <com.woa.helper.main.SettingsButton
                    style="@style/settingsButton"
                    android:id="@+id/backupQB"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    app:text="@string/preference1" />

                <com.woa.helper.main.SettingsButton
                    style="@style/settingsButton"
                    android:id="@+id/backupQB_A"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    app:text="@string/preference2" />

                <com.woa.helper.main.SettingsButton
                    style="@style/settingsButton"
                    android:id="@+id/autobackup"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    app:text="@string/preference3" />

                <com.woa.helper.main.SettingsButton
                    style="@style/settingsButton"
                    android:id="@+id/autobackup_a"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    app:text="@string/preference4" />

                <com.woa.helper.main.SettingsButton
                    style="@style/settingsButton"
                    android:id="@+id/confirmation"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    app:text="@string/preference5" />

                <com.woa.helper.main.SettingsButton
                    style="@style/settingsButton"
                    android:id="@+id/automount"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    app:text="@string/preference7" />

                <com.woa.helper.main.SettingsButton
                    style="@style/settingsButton"
                    android:id="@+id/securelock"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    app:text="@string/preference9" />

                <com.woa.helper.main.SettingsButton
                    style="@style/settingsButton"
                    android:id="@+id/mountLocation"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    app:text="@string/preference10" />

                <com.woa.helper.main.SettingsButton
                    style="@style/settingsButton"
                    android:id="@+id/appUpdate"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    app:text="@string/preference11" />

                <com.woa.helper.main.SettingsButton
                    style="@style/settingsButton"
                    android:id="@+id/devcfg1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    app:text="@string/preference12" />

                <com.woa.helper.main.SettingsButton
                    style="@style/settingsButton"
                    android:id="@+id/devcfg2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:visibility="gone"
                    app:text="@string/preference13" />

                <LinearLayout
                    style="@style/settingsButton"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_gravity="center"
                    android:background="@drawable/default_background"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="@dimen/_8ssp"
                        android:text="Language" />

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/languages"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_8ssp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <com.github.mmin18.widget.RealtimeBlurView
        android:id="@+id/blur"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:realtimeBlurRadius="10dp"
        android:visibility="gone"
        app:realtimeOverlayColor="#80000000" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>